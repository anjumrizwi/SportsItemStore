@model IEnumerable<SportsItemsStore.Domain.Entities.OrderDetail>
@using SportsItemsStore.Domain.Entities
<table class="table table-hover table-striped table-condensed table-bordered ordersTable">
    <thead>
        <tr>
            <th>Product</th>
            <th>Size</th>
            <th>Color</th>
            <th>Manufacturer</th>
            <th>Quantity</th>
            <th>Sub Total</th>
        </tr>
    </thead>
    <tbody>
        @if(@Model.Count()<=0)
        {
        <tr class="error">
            <td colspan="5">
                <div class="text-center"><strong>No orders found</strong></div>
            </td>
        </tr>
        }
        @{
            decimal totalQty = 0;
            decimal grangTotal = 0;
         }
        @foreach(var detail in Model)
        {
        <tr class="repeat-animation">
            <td>
                @detail.Product.Name
            </td>
            <td>
               @(detail.Size==null?"":detail.Size.FullName)
            </td>
            <td>
                @(detail.Color==null?"":detail.Color.Name)
            </td>
            <td>
                 @(detail.Manufacturer==null?"":detail.Manufacturer.Name)
            </td>
            <td>
                 @detail.Quantity
            </td>
             <td>
                 @detail.SubTotal
            </td>
        </tr>
            totalQty += detail.Quantity;
            grangTotal += detail.SubTotal;
        }
            
        <tr class="info">
            <td  align="right" colspan="4">
                <strong>Total:</strong>
                &nbsp;
            </td>
            <td>
                <strong>@totalQty</strong>
            </td>
            <td>
                <strong>@grangTotal</strong>
            </td>
        </tr>
    </tbody>
</table>