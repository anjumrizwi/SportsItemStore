@model SportsItemsStore.WebUI.Models.UserRegistrationModel

@{
    ViewBag.Title = "Register";
}

<h2>Register</h2>

@Html.ValidationSummary()

@using (Html.BeginForm())
{   
     <div>
        <fieldset>
            <legend>Account Information</legend>

            <div class="editor-label">
                Username
            </div>
            <div class="editor-field">
                @Html.TextBoxFor(m => m.Username)
                @Html.ValidationMessageFor(m => m.Username)
            </div>
            <div class="editor-label">
                Password
            </div>
            <div class="editor-field">
                @Html.PasswordFor(m => m.Password)
                @Html.ValidationMessageFor(m => m.Password)
            </div>

             <div class="editor-label">
                Confirm Password
            </div>
            <div class="editor-field">
                @Html.EditorFor(m => m.ComfirmPassword)
                @Html.ValidationMessageFor(m => m.ComfirmPassword)
            </div>

             <div class="editor-label">
                Email
            </div>
            <div class="editor-field">
                @Html.TextBoxFor(m => m.Email)
                @Html.ValidationMessageFor(m => m.Email)
            </div>

            <p>
                <input type="submit" value="Register" class="actionButtons" />
            </p>
        </fieldset>
    </div>
    
    
}

<script type="text/javascript">
    $(document).ready(function () {
        $("DIV.searchFilters").hide();
    });
</script>

